---
import Layout from "@layouts/Layout.astro";
import Post from "@components/Post.astro";
const allPosts = await Astro.glob("./*.{md,mdx}");
const featuredPosts = allPosts.filter(
  (post) => post.frontmatter.featured
);
const title = "PerÃ­cia";
---

<Layout title={title}>
  <main class="min-w-[50vw]">
    <nav>
      <div class="bredcrumbs"><a href="/disciplinas">Disciplinas</a> > Pericia</div>
    </nav>
      <h2>Todos as Postagens</h2>
      <ul class="flex flex-col gap-6">
        {
          featuredPosts.map((post) => (
            <Post
              url={post.url}
              title={post.frontmatter.title}
              description={post.frontmatter.description}
              slides={post.frontmatter.slides}
              imageURL={post.frontmatter.imageURL}
            />
          ))
        }
      </ul>
    </section>
  </main>
</Layout>