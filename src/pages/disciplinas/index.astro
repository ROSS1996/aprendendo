---
import Layout from "@layouts/Layout.astro";
const allPosts = await Astro.glob("./**/*.{md,mdx}");
const disciplinas = [...new Set(allPosts.map((post) => post.frontmatter.disciplina).flat())];
const title = "Disciplinas";

---

<Layout title={title}>
  <main class="min-w-[50vw]">
      <h2>Todos as Disciplinas</h2>
      <ul class="flex flex-col gap-6">
        {disciplinas.map((disciplina) => (
          <li class="capitalize"><a href={`/disciplinas/${disciplina}`}>{disciplina}</a></li>
        ))}
      </ul>
    </section>
  </main>
</Layout>